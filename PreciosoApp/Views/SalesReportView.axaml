<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PreciosoApp.Views.SalesReportView"
			 xmlns:vm="using:PreciosoApp.ViewModels"
			 x:DataType="vm:SalesReportViewModel">
	<Grid>

		<TabControl>
			<TabItem Header="Daily Income Report">
				<StackPanel>
					<StackPanel Orientation="Horizontal">
						<StackPanel Orientation="Vertical">
							<TextBlock>Select Start Date</TextBlock>
							<CalendarDatePicker SelectedDate="{Binding StartDate}"></CalendarDatePicker>
						</StackPanel>
						<StackPanel Orientation="Vertical">
							<TextBlock>Select End Date</TextBlock>
							<CalendarDatePicker SelectedDate="{Binding EndDate}"></CalendarDatePicker>
						</StackPanel>
						<Button Command="{Binding FilterCommand}">Filter</Button>
					</StackPanel>
					<DataGrid AutoGenerateColumns="True" ItemsSource="{Binding DailyGross}" >
						
					</DataGrid>
				</StackPanel>
			</TabItem>
			<TabItem Header="Daily Sales">
				<StackPanel>
					<StackPanel Orientation="Vertical">
						<StackPanel Orientation="Horizontal">
							<TextBlock Margin="5" VerticalAlignment="Center">Select Date</TextBlock>
							<CalendarDatePicker SelectedDate="{Binding SelectedDate}" Margin="5"></CalendarDatePicker>
							<Button Margin="5">Search</Button>
						</StackPanel>
						
						<DataGrid Margin="0 20 0 0" Height="500" GridLinesVisibility="All" AutoGenerateColumns="False" ItemsSource="{Binding DailyReport}">
							<DataGrid.Columns>
								<DataGridTextColumn Header="Date" Width="auto" Binding="{Binding DateTime}"/>
								<DataGridTextColumn Header="Client" Width="auto" Binding="{Binding Client}"/>
								<DataGridTextColumn Header="Therapist" Width="auto" Binding="{Binding Therapist}"/>
								<DataGridTextColumn Header="MOP" Width="auto" Binding="{Binding MOP}"/>
								<DataGridTemplateColumn Header="Availed"  Width="auto">
									<DataTemplate>
										<TextBox Text="{Binding Availed}" BorderThickness="0" LineHeight="20"/>
									</DataTemplate>
								</DataGridTemplateColumn>
								<DataGridTemplateColumn Header="Type"  Width="auto">
									<DataTemplate>
										<TextBox Text="{Binding Type}" BorderThickness="0" LineHeight="20"/>
									</DataTemplate>
								</DataGridTemplateColumn>
								<DataGridTemplateColumn Header="Sales"  Width="auto">
									<DataTemplate>
										<TextBox Text="{Binding Price}" BorderThickness="0" LineHeight="20"/>
									</DataTemplate>
								</DataGridTemplateColumn>
								<DataGridTemplateColumn Header="Commission"  Width="auto">
									<DataTemplate>
										<TextBox Text="{Binding Commission}" BorderThickness="0" LineHeight="20"/>
									</DataTemplate>
								</DataGridTemplateColumn>
							</DataGrid.Columns>
						</DataGrid>
					</StackPanel>
				</StackPanel>
			</TabItem>
		</TabControl>

	</Grid>
</UserControl>